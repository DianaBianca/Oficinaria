<div class="text-lg text-slate-50 mt-4 sm:mt-6 md:mt-8 lg:mt-10 xl:mt-55 mb-10">
  <% if @address_info[:status] == 200 %>
    <div class="relative isolate flex flex-col items-center justify-center w-full">
      <div class="w-95">
        <div class="flex flex-col gap-16 bg-white/5 px-6 py-16 ring-1 ring-white/10 sm:rounded-3xl sm:p-8 lg:mx-0 lg:max-w-none lg:flex-row lg:items-center lg:py-20 xl:gap-x-20 xl:px-20">
          <div>
            <p class="text-3xl font-bold tracking-tight sm:text-4xl">
              <%= @address_info[:city] %> - <%= @address_info[:state] %>
            </p>
            <p><%= @address_info[:address] %></p>
            <p>
              <%= @address_info[:district] %>, <%= @address_info[:city] %> - <%= @address_info[:state] %>, <%= @address_info[:cep] %>
            </p>
            <div class="flex items-center space-x-2">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-white">
                <path fill-rule="evenodd" d="M1.5 4.5a3 3 0 0 1 3-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 0 1-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 0 0 6.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 0 1 1.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 0 1-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5Z" clip-rule="evenodd" />
              </svg>
              (DDD<%= @address_info[:ddd] %>)
            </div>
          </div>
          <div class="h-auto w-full flex-1">
            <iframe
              loading="lazy"
              allowfullscreen
              src="https://www.google.com/maps/embed/v1/place?q=<%= ERB::Util.url_encode(@address_info[:district] + ',' + @address_info[:city]) %>&key=AIzaSyCle2fQDVIr8WSECtQzUpPPnINXZ_GgMUA"
              class="w-full h-48 sm:h-64 md:h-80 lg:h-96 rounded-2xl object-cover shadow-xl">
            </iframe>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="relative isolate flex flex-col items-center justify-center">
      <div class="w-95">
        <div class="flex flex-col gap-16 bg-white/5 px-6 py-16 ring-1 ring-white/10 sm:rounded-3xl sm:p-8 lg:mx-0 lg:max-w-none lg:flex-row lg:items-center lg:py-20 xl:gap-x-20 xl:px-20">
          <p class="text-3xl font-bold tracking-tight sm:text-4xl">
            <%= @address_info[:message] %>
          </p>
          <%= image_tag 'not-found-maps.webp', alt: 'Imagem generica do maps', class:"flex-1 w-full h-48 sm:h-64 md:h-80 lg:h-96 rounded-2xl object-cover shadow-xl" %>
        </div>
      </div>
    </div>
  <% end %>
</div>