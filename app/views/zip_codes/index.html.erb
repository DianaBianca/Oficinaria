<div class="bg-white">
  <div class="relative">
    <div class="mx-auto max-w-7xl">
      <div class="relative z-10 pt-14 lg:w-full lg:max-w-2xl">
        <svg class="absolute inset-y-0 right-8 hidden h-full w-80 translate-x-1/2 transform fill-white lg:block" viewBox="0 0 100 100" preserveAspectRatio="none" aria-hidden="true">
          <polygon points="0,0 90,0 50,100 0,100" />
        </svg>

        <div class="relative px-6 py-32 sm:py-40 lg:px-8 lg:py-56 lg:pr-0">
          <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-xl">
            <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">Busque CEPs com facilidade</h1>
            <p class="mt-6 text-lg leading-8 text-gray-600">Encontre o que precisa em segundos na melhor plataforma de busca de CEP online!</p>
            <div class="mt-10 flex items-center gap-x-6">
              <%= form_tag(search_path, method: :get, data: { turbo_frame: "zip_code_info_frame" }, class: "flex w-full") do %>
                <%= text_field_tag :cep, params[:cep], required: true, placeholder: "Digite seu CEP", class: "shadow-[0_0_20px_rgba(255,255,255,0.5)] flex-grow rounded-full border-0 px-4 py-3 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
                <button type="submit" class="flex items-center justify-center p-3 text-blue focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white">
                  <%= heroicon "magnifying-glass", variant: "solid", options: { class: "h-6 w-6 text-blue" } %>
                </button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
      <img class="aspect-[3/2] object-cover lg:aspect-auto lg:h-full lg:w-full" src="https://images.unsplash.com/photo-1521737711867-e3b97375f902?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1587&q=80" alt="">
    </div>
  </div>

  <% if @address_info %>
    <div id="zip_code_info_frame">
      <%= render partial: "info" %>
    </div>
  <% end %>
  <%= render partial: "bonus_infos", locals: {  most_searched_zip_codes: @most_searched_zip_code} %>
</div>
